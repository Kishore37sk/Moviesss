<h1>Reviews for <%= @movie.name %></h1>

<div class="card">
  <div class="card-body w-50">
    <% @reviews.each do |review| %>
      <div class="card mb-3">
        <div class="card-body">
          <h6 class="card-subtitle mb-2 text-muted"><%= review.user.email %></h6>
          <p class="card-text">Rating: <%= review.rating %></p>
          <p class="card-text"><%= review.content %></p>
          <% if user_signed_in? && review.user == current_user %>
            <%= link_to "Edit", edit_movie_review_path(@movie, review),class: "btn btn-secondary" %>
            <%= link_to "Delete", movie_review_path(@movie, review),class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this review?" } %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to "Add Review", new_movie_review_path(@movie),class: "btn btn-primary"  %>

<%= link_to "Back to Movies", root_path,class: "btn btn-dark"  %>